@model Breeder_OnMVC.Models.Breeder

@{
    ViewData["Title"] = "Создать";
}

<h1>Создать</h1>

<h4>Справочник</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" placeholder="Введите наименование сорта.."/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Author" class="control-label"></label>
                <input asp-for="Author" class="form-control" placeholder="Введите свое имя.."/>
                <span asp-validation-for="Author" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ParentVarieties" class="control-label"></label>
                <input asp-for="ParentVarieties" class="form-control" placeholder="Введите родственные сорта.."/>
                <span asp-validation-for="ParentVarieties" class="text-danger"></span>
            </div>
            <div class="form-group" pattern="[0-9]">
                <label asp-for="Productivity" class="control-label" ></label>
                <input asp-for="Productivity" class="form-control" placeholder="Введите урожайность.."/>
                <span asp-validation-for="Productivity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Characteristic" class="control-label"></label>
                <input asp-for="Characteristic" class="form-control" placeholder="Введите краткую характеристику.."/>
                <span asp-validation-for="Characteristic" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FrostResistance" class="control-label"></label>
                <select asp-for="FrostResistance" class="form-control">
                    <option value="Есть">Есть</option>
                    <option value="Нет">Нет</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="DiseaseResistance" class="control-label"></label>
                <select asp-for="DiseaseResistance" class="form-control">
                    <option value="Есть">Есть</option>
                    <option value="Нет">Нет</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Funds" class="control-label"></label>
                <select asp-for="Funds" class="form-control">
                    <option value="Львовский ЛСНЦ">Львовский ЛСНЦ</option>
                    <option value="Волынский ЛСНЦ">Волынский ЛСНЦ</option>
                    <option value="Киевский ЛСНЦ">Киевский ЛСНЦ</option>
                    <option value="Харьковский ЛСНЦ">Харьковский ЛСНЦ</option>
                    <option value="Херсонский ЛСНЦ">Херсонский ЛСНЦ</option>
                    <option value="Полтавский ЛСНЦ">Полтавский ЛСНЦ</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Вернутся назад</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
